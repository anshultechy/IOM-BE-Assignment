{
  "extends": [
    "standard",
    "prettier"
  ],
  "rules": {
    "arrow-parens": "off",
    "linebreak-style": "off",
    "semi": [
      2,
      "always"
    ],
    "indent": [
      2,
      4,
      {
        "SwitchCase": 1
      }
    ],
    "space-before-function-paren": "off",
    "quotes": "off",
    "eol-last": "off",
    "comma-dangle": "off",
    "operator-linebreak": "off",
    "camelcase": "off",
    "padded-blocks": "off",
    "handle-callback-err": "off",
    "no-lone-blocks": "off",
    "object-curly-spacing": "off",
    "no-multiple-empty-lines": "off",
    "switch-colon-spacing": "error",
    "no-return-await": "off",
    "space-infix-ops": [
      "error",
      {
        "int32Hint": false
      }
    ]
  },
  "plugins": [
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "env": {
    "es6": true,
    "mocha": true
  }
}
